<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.investdream.investdreamandroidapp.Calculadora">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelValorDoBem"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="Valor do Bem"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/fieldValorDoBem"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:digits="0123456789"
            android:hint="Insira somente números."
            android:inputType="numberDecimal"
            android:maxLength="14" />

        <TextView
            android:id="@+id/labelValorDaEntrada"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Valor da Entrada"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/fieldValorDaEntrada"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:digits="0123456789"
            android:hint="Insira somente números."
            android:inputType="numberDecimal"
            android:maxLength="14" />

        <TextView
            android:id="@+id/labelQuantidadeDeParcelas"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Quantidade de Parcelas"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/fieldQuantidadeDeParcelas"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:digits="0123456789"
            android:hint="Quantidade de parcelas. (Em Breve...)"
            android:inputType="numberDecimal"
            android:maxLength="14"
            android:enabled="false"/>

        <Button
            android:id="@+id/btCalcular"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="100dp"
            android:clickable="true"
            android:enabled="true"
            android:onClick="calcular"
            android:text="Calcular"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
